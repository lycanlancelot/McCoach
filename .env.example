# Database
DATABASE_URL="postgresql://healthyapp:dev_password_change_in_prod@localhost:5432/healthyapp"

# Claude (Anthropic) API (REQUIRED for AI meal analysis)
ANTHROPIC_API_KEY="sk-ant-..." # Get from https://console.anthropic.com/keys
CLAUDE_MODEL="claude-sonnet-4-20250514" # Claude Sonnet 4 recommended

# USDA FoodData Central API (REQUIRED for nutrition data)
USDA_API_KEY="" # Get free key from https://fdc.nal.usda.gov/api-key-signup.html
USDA_BASE_URL="https://api.nal.usda.gov/fdc/v1"

# File Storage
UPLOAD_DIR="./public/uploads"  # Local storage path for meal images
MAX_FILE_SIZE="10485760"       # 10MB in bytes

# Feature Flags (optional)
ENABLE_AI_ANALYSIS="true"      # Toggle AI features
ENABLE_USDA_CACHE="true"       # Toggle USDA caching

# Development
NODE_ENV="development"
