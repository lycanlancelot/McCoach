# Database
DATABASE_URL="postgresql://healthyapp:dev_password@localhost:5432/healthyapp"

# OpenAI API (Required)
OPENAI_API_KEY="sk-proj-..." # Get from https://platform.openai.com/api-keys
OPENAI_MODEL="gpt-4o"         # Optional, defaults to gpt-4o

# USDA FoodData Central API (REQUIRED)
USDA_API_KEY=""                # Get free key from https://fdc.nal.usda.gov/api-key-signup.html
USDA_BASE_URL="https://api.nal.usda.gov/fdc/v1"

# File Storage
UPLOAD_DIR="./public/uploads"  # Local storage path
MAX_FILE_SIZE="10485760"       # 10MB in bytes

# Feature Flags
ENABLE_AI_ANALYSIS="true"      # Toggle AI features
ENABLE_USDA_CACHE="true"       # Toggle USDA caching

# Development
NODE_ENV="development"
